%h2.text-center Авторизация
= form_for(resource, :as => resource_name, :url => user_session_path, html: {class: 'col-md-6 col-md-offset-3'}) do |f|
  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :password
    = f.password_field :password, class: 'form-control'
  - if devise_mapping.rememberable?
    .checkbox
      = f.label :remember_me, 'запомнить'
      = f.check_box :remember_me
  .form-group= f.submit "Войти", class: 'btn btn-primary col-md-12'
.col-md-6.col-md-offset-3
  = render :partial => 'devise/shared/links'
